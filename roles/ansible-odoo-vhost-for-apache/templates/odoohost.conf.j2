<VirtualHost *:80>
        ServerName {{ domain }}
        ServerAlias {{ domainAliases }}
        RewriteEngine On
        RewriteCond %{HTTPS} off
        RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}
</VirtualHost>

